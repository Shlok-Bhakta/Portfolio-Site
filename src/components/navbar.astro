---
import "../styles/global.css";
import Hamburger from "./hamburger.svelte";

export interface Props {
  globalColor?: string;
}

const { globalColor = "#00ffd5" } = Astro.props;
---

<nav class="sticky top-0 z-50 bg-base/95 backdrop-blur-sm border-b border-overlay0">
  <div class="flex items-center justify-between px-4 py-2">
    <!-- Logo -->
    <a 
      href="/" 
      class="text-4xl font-display nerdfont transition-colors duration-200 hover:opacity-80" 
      style={`color: ${globalColor};`}
    >
      SB~@
    </a>
    
    <!-- Desktop Navigation -->
    <div class="hidden md:flex items-center gap-4">
      <a
        href="/blog/"
        class="px-3 py-1 text-sm font-mono text-text border border-overlay0 bg-surface0/50 hover:bg-surface1 transition-all duration-200 hover:border-opacity-80"
        style={`hover:border-color: ${globalColor}; hover:color: ${globalColor};`}
      >
        ./blog
      </a>
      <a
        href="/projects/"
        class="px-3 py-1 text-sm font-mono text-text border border-overlay0 bg-surface0/50 hover:bg-surface1 transition-all duration-200 hover:border-opacity-80"
        style={`hover:border-color: ${globalColor}; hover:color: ${globalColor};`}
      >
        ./projects
      </a>
    </div>
    
    <!-- Mobile Hamburger -->
    <div class="md:hidden">
      <Hamburger client:load globalColor={globalColor} />
    </div>
  </div>
</nav>
