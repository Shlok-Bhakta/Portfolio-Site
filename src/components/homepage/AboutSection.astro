---
import GlassmorphicContainer from "../glassmorphism/GlassmorphicContainer.svelte";

interface Props {
  globalColor: string;
}

const { globalColor } = Astro.props;
---

<GlassmorphicContainer client:only color={globalColor} text="About Me">
  <div class="p-6">
    <div>
      $ <span class="text-green">cat</span>
      <span class="text-text">About.txt</span>
      <div>
        <div style={`color: ${globalColor}`} class="text-2xl">About Me</div>
        <p class="text-subtext0">
          Computer Science major and Cybersecurity minor at Texas A&M
          University (Expected graduation: May 2026) with demonstrated
          experience in fullstack development through academic projects and
          personal initiatives.
        </p>

        <div style={`color: ${globalColor}`} class="text-xl">
          Professional Objectives
        </div>
        <ul class="list-disc px-8 text-subtext0">
          <li>Seeking software engineering internship for Summer 2025</li>
          <li>
            Interested in roles involving cloud platform development or
            cybersecurity integration
          </li>
        </ul>

        <div style={`color: ${globalColor}`} class="text-xl">
          Technical Proficiencies
        </div>
        <ul class="list-disc px-8 text-subtext0">
          <li><strong>Core languages:</strong> JavaScript, Python, Java, SQL</li>
          <li>
            <strong>Frontend:</strong> Svelte (similar to vue), React,
            HTML5/CSS3, Tailwind
          </li>
          <li><strong>Backend:</strong> Node.js, Express, REST API design</li>
          <li><strong>Tools:</strong> Git, Docker</li>
        </ul>
      </div>
    </div>
  </div>
</GlassmorphicContainer>